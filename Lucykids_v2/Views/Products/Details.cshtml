@model Product

<p>
    <a asp-action="Edit">Edit Product</a>
    <a asp-action="Delete">Delete Product</a>
</p>

      <div class="caption">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <p><strong>Category: </strong>@Model.Category.Name</p>
        <p><strong>Size: </strong> @Model.Size.Name</p>
        <p><strong>Brand: </strong> @Model.Brand.Name</p>
        <h4>@Model.Description</h4>
        <p class="button">
            <a class="btn btn-primary" asp-controller="Carts" asp-action="AddToShoppingCart"
               asp-route-productId="@Model.ProductId">Add to cart</a>
        </p>
    </div>

    <div id="images">

        @if (Model.ProductImageMappings != null && Model.ProductImageMappings.Any())
        {

            @foreach (var item in Model.ProductImageMappings.OrderBy(pim => pim.ImageNumber))
            {
                <div class="col-sm-3" style="padding:10px">
                    <img src="@(Url.Content(Constants.ProductThumbnailPath) + item.ProductImage.FileName)" />
                </div>
            }
        }

    </div>


